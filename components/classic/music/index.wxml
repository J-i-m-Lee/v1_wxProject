<view hidden="{{hidden}}" class="container">
    <image class="img {{playing? 'rotation' :''}}" src="{{img}}"></image>
    <image class="player-img" bind:tap="onPlay" src="{{playing?pauseBtn:playBtn}}"></image>
    <image class="tag" src="./images/music@tag.png"></image>
    <text class="content">{{content}}</text>
</view>
